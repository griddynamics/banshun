<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="beanNameResolver" class="org.springframework.web.servlet.view.BeanNameViewResolver"/>
    <bean id="nested-controller-test" class="com.griddynamics.spring.nested.TestView"/>
    <bean id="annotation-test" class="com.griddynamics.spring.nested.TestView"/>

    <bean name="root" class="com.griddynamics.spring.nested.ContextParentBean">
        <property name="configLocation" value="classpath:/com/griddynamics/spring/nested/controllers-test/child-context.xml" />
        <property name="registry">
            <bean class="com.griddynamics.spring.nested.RegistryBean" />
        </property>
        <property name="strictErrorHandling" value="true" />
        <property name="childApplicationContextClassName" value="org.springframework.context.support.ClassPathXmlApplicationContext"/>
    </bean>

    <bean id="root-handler-mapping" class="com.griddynamics.spring.nested.ContextParentAnnotationHandlerMapping"/>
</beans>
