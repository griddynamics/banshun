<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="root" class="com.griddynamics.spring.nested.ContextParentBean">
        <property name="configLocation" value="
                /com/griddynamics/spring/nested/xml/first-export-context.xml
                /com/griddynamics/spring/nested/xml/second-export-context.xml
        " />
        <property name="registry">
            <bean class="com.griddynamics.spring.nested.RegistryBean" />
        </property>
        <property name="strictErrorHandling" value="true" />
        <property name="childApplicationContextClassName" value="org.springframework.context.support.ClassPathXmlApplicationContext"/>
    </bean>
</beans>