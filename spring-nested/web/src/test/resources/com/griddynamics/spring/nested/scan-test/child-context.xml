<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean name="/nested-controller-test.html" class="com.griddynamics.spring.nested.web.NestedController"/>

    <bean name="annotation-test" class="com.griddynamics.spring.nested.web.AnnotatedTestController"/>

    <bean name="handler" class="com.griddynamics.spring.nested.web.NestedHandler"/>

    <bean name="mapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
                /handler-test.html=handler
            </value>
        </property>
    </bean>

</beans>