<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="childContextPrototype" class="com.griddynamics.spring.nested.SingleResourceXmlChildContext" scope="prototype"/>

    <bean name="root" class="com.griddynamics.spring.nested.StrictContextParentBean">
        <property name="configLocations" value="
                /com/griddynamics/spring/nested/analyzer/export-context.xml,
                /com/griddynamics/spring/nested/analyzer/import-context.xml
        " />
        <property name="strictErrorHandling" value="true" />
        <property name="childContextPrototype" value="childContextPrototype"/>
    </bean>

    <bean id="proxyCreator" class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
        <property name="customTargetSourceCreators" >
            <bean class="com.griddynamics.spring.nested.NestedTargetSourceCreator"/>
        </property>
    </bean>
</beans>