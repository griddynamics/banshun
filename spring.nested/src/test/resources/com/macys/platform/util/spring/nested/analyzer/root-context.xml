<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="root" class="com.macys.platform.util.spring.nested.StrictContextParentBean">
        <property name="configLocation" value="
                /com/macys/platform/util/spring/nested/analyzer/export-context.xml
                /com/macys/platform/util/spring/nested/analyzer/import-context.xml
        " />
        <property name="registry">
            <bean class="com.macys.platform.util.spring.nested.RegistryBean" />
        </property>
        <property name="strictErrorHandling" value="true" />
        <property name="childApplicationContextClassName" value="org.springframework.context.support.ClassPathXmlApplicationContext"/>
    </bean>
</beans>