<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:bs="http://www.griddynamics.com/schema/banshun"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.griddynamics.com/schema/banshun http://www.griddynamics.com/schema/banshun/banshun-schema.xsd">
    
    <bean name="firstObject" class="com.griddynamics.banshun.fixtures.JustBean" lazy-init="true"/>
    <bean name="secondObject" class="com.griddynamics.banshun.fixtures.JustBean" lazy-init="true"/>
    <bean name="thirdObject" class="com.griddynamics.banshun.fixtures.JustBean" lazy-init="true"/>
    <bean name="fourthObject" class="com.griddynamics.banshun.fixtures.JustBean" lazy-init="true"/>

    
    <bs:export ref="firstObject" interface="com.griddynamics.banshun.fixtures.MiddleFace"/>
    <bs:export ref="secondObject" interface="com.griddynamics.banshun.fixtures.RootFace"/>

    <!-- Old fashion way using boilerplate xml wasn't changed here
        due to check it's working every time by running unit-tests -->
    <bean name="thirdObject-export-ref" factory-bean="root" factory-method="export" lazy-init="false">
        <constructor-arg>
            <bean class="com.griddynamics.banshun.ExportRef">
                <constructor-arg >
                    <idref bean="thirdObject"/>
                </constructor-arg>
                <constructor-arg value="com.griddynamics.banshun.fixtures.MiddleFace"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean name="fourthObject-export-ref" factory-bean="root" factory-method="export" lazy-init="false">
        <constructor-arg>
            <bean class="com.griddynamics.banshun.ExportRef">
                <constructor-arg >
                    <idref bean="fourthObject"/>
                </constructor-arg>
                <constructor-arg value="com.griddynamics.banshun.fixtures.RootFace"/>
            </bean>
        </constructor-arg>
    </bean>
</beans>
